manifest {
  description = 'Proof of concept of the covidestim pipeline implemented w Nextflow'
  author = 'Marcus Russi'
  nextflowVersion = '>=20.07.0'
}

profiles {
  local {
    docker.enabled = true
    params.outdir  = "results"
  }
  ycrc {
    singularity.enabled = true
    process.executor    = 'slurm'
    params.outdir       = "results"
  }
  amazon {
    params.outdir = "s3://nf-test-results/results/"
    aws {
      maxConnections   = 30
      uploadMaxThreads = 4
    }
    timeline {
      enabled = true
      file    = "s3://nf-test-results/results/timeline.html"
    }
    report {
      enabled = true
      file    = "s3://nf-test-results/results/report.html"
    }
  }
}
